<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:padding="16dp"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Điều Trị"/>
    <TextView
        android:id="@+id/txt_treatment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/input_margin_top"
        android:textColor="@color/color_black"
        android:text=""/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/input_margin_top"
        android:background="@color/color_grey_200"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/input_margin_top"
        android:text="Tổng Tiền"/>
    <TextView
        android:id="@+id/txt_total_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/input_margin_top"
        android:textColor="@color/color_black"
        android:text="Điều Trị"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/input_margin_top"
        android:background="@color/color_grey_200"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/input_margin_top"
        android:text="Còn Nợ"/>
    <TextView
        android:id="@+id/txt_not_pay_yet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/input_margin_top"
        android:textColor="@color/color_black"
        android:text="Nợ"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/input_margin_top"
        android:background="@color/color_grey_200"/>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <AutoCompleteTextView
            android:id="@+id/edt_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_attach_money_black_24dp"
            android:drawablePadding="@dimen/drawable_padding"
            android:hint="@string/label_money"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:maxLines="1"
            android:textSize="@dimen/input_size_normal" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lưu"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:textSize="18dp"
        android:textAllCaps="true"
        android:textColor="@color/color_blue_800"
        android:layout_gravity="right"/>
</LinearLayout>
