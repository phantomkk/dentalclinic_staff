<?xml version="1.0" encoding="utf-8"?>
<com.mcxtzhang.swipemenulib.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:paddingBottom="1dp"
    app:ios="false"
    app:leftSwipe="true"
    app:swipeEnable="true">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="10">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:weightSum="10"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:text="Bắt đầu: " />

                        <TextView
                            android:id="@+id/txt_start_date"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="7"
                            android:text="21-07-2018"
                            android:textColor="@color/color_black" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/input_margin_top"
                        android:gravity="center_vertical"
                        android:weightSum="10"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:text="Kết thúc: " />

                        <TextView
                            android:id="@+id/txt_end_date"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="7"
                            android:text="21-07-2018"
                            android:textColor="@color/color_black" />
                    </LinearLayout>
                </LinearLayout>


                <TextView
                    android:id="@+id/txt_appointment_status"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="Đang Xác Nhận"
                    android:textAlignment="textEnd"
                    android:textColor="@color/color_orange_500" />
            </LinearLayout>

            <TextView
                android:id="@+id/btn_view_more"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/input_margin_top"
                android:layout_marginBottom="10dp"
                android:background="@color/color_white"
                android:text="Xem Thêm"
                android:textAlignment="textEnd"
                android:textAllCaps="true"
                android:textColor="@color/color_blue_500" />

            <LinearLayout
                android:id="@+id/linear_layout_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:animateLayoutChanges="true"
                android:visibility="gone"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/input_margin_top"
                    android:background="@color/color_grey_200" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/input_margin_top"
                    android:text="Lý Do" />

                <TextView
                    android:id="@+id/txt_reason"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/input_margin_top"
                    android:text=""
                    android:textColor="@color/color_black" />
            </LinearLayout>
        </LinearLayout>


    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/btn_view"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:background="@color/color_blue_800"
        android:text="Xem"
        android:textColor="@android:color/white"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_delete"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:background="@color/color_red_500"
        android:text="Xóa"
        android:textColor="@android:color/white"
        android:visibility="gone" />
</com.mcxtzhang.swipemenulib.SwipeMenuLayout>
