<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/input_margin_top"
        android:background="@color/color_grey_200" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_medicine_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:text="Tên thuốc" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_subtract_qty_medicine"
                style="@style/custom_button_round"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="4dp"
                android:text="-"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edt_quantity_medicine"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:background="@color/color_grey_300"
                android:gravity="center"
                android:inputType="number"
                android:text="1" />

            <Button
                android:id="@+id/btn_add_qty_medicine"
                style="@style/custom_button_round"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="4dp"
                android:text="+"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
    <!--<Button-->
    <!--android:id="@+id/btn_select_medicine"-->
    <!--style="@style/custom_button_blue"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_alignParentEnd="true"-->
    <!--android:minHeight="30dp"-->
    <!--android:minWidth="50dp"-->
    <!--android:text="Chọn" />-->
</LinearLayout>
